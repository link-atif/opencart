{{ header }}
  <div class="banner_static_inner">
        <div class="container">
            <h2>{{ heading_title }}</h2>
            <p>{{ text_email }}</p>
        </div>
    </div>
    <!--banner inner pages-->
    {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
    <div class="register_login_sec">
        <div class="register_login_sec_inner">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                
                <div class="col-md-12">
                    <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                </div>
                
               
                
                <div class="clearfix"></div>
                
                <div class="submit_buttons_form">
                   
                    <div class="clearfix"></div>
                    <input type="submit" value="{{ button_continue }}" class="login_btn" />
                    
                    
                    <div class="clearfix"></div>
                    <a href="{{ back }}" class="login_btn">{{ button_back }}</a>
                    
                </div>
                
            </form>
        </div>
    </div>
    
{{ footer }}